# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# === Database ===
DATABASE_URL=sqlite:///./voice_agent.db
PARKING_DATABASE_URL=sqlite:///./parking.db

# === Parking Configuration ===
LOT_NAME=RapidPark-A
LOT_CAPACITY=50

# Pricing (in cents per hour)
RATE_CENTS_PER_HOUR=400
RATE_CENTS_PER_HOUR_CAR=400
RATE_CENTS_PER_HOUR_MOTORCYCLE=300
RATE_CENTS_PER_HOUR_TRUCK=600
MIN_CHARGE_MINUTES=60

# === Cartesia Voice Agent ===
# Get your API key from https://play.cartesia.ai/
CARTESIA_API_KEY=your_cartesia_api_key_here
CARTESIA_AGENT_ID=your_agent_id_here

# Voice settings (optional)
CARTESIA_VOICE_ID=a0e99841-438c-4a64-b679-ae501e7d6091
# Available voices: 
# - Friendly Woman: a0e99841-438c-4a64-b679-ae501e7d6091
# - Professional Man: 694f9389-aac1-45b6-b726-9d9369183238
# - Calm Woman: 79a125e8-cd45-4c13-8a67-188112f4dd22

# === Twilio (for phone number integration) ===
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# === SMTP (for email confirmations) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@rapidpark.com

# === API Configuration ===
PARKING_API_BASE_URL=http://localhost:8000

# === Optional: External webhook for intake data ===
EXTERNAL_POST_URL=
